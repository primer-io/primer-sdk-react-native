{
  "name": "@primer-io/react-native",
  "version": "2.29.0",
  "description": "Primer SDK for RN",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "primer-io-react-native.podspec",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "npx eslint --config ../../eslint.config.mjs",
    "lintAndFix": "npx eslint --config ../../eslint.config.mjs --fix",  
    "build": "bob build",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/primer-io/primer-sdk-react-native",
  "author": "StickyCube <will@primer.io> (https://github.com/StickyCube)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/primer-io/primer-sdk-react-native/issues"
  },
  "homepage": "https://github.com/primer-io/primer-sdk-react-native#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@tsconfig/react-native": "^3.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^18.0.26",
    "@types/react-native": "0.72.2",
    "commitlint": "^11.0.0",
    "danger": "^12.3.3",
    "danger-plugin-prettier": "^0.2.0-development",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^4.2.5",
    "jest": "^29.7.0",
    "pod-install": "^0.1.0",
    "prettier": "^3.4.2",
    "react-native-builder-bob": "^0.20.1",
    "release-it": "^15.5.0",
    "ts-jest": "^29.1.2",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">=16"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "nyc": "^15.1.0",
    "uuid": "^8.3.2"
  }
}
